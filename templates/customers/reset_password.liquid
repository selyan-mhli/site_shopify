<div class="np-reset">
  <div class="np-reset__container">
    <h1 class="np-reset__title">Réinitialiser le mot de passe</h1>
    
    {% form 'reset_customer_password' %}
      {{ form.errors | default_errors }}
      
      <div class="np-reset__field">
        <label for="Password">Nouveau mot de passe</label>
        <input type="password" name="customer[password]" id="Password" autocomplete="new-password" required>
      </div>
      
      <div class="np-reset__field">
        <label for="PasswordConfirmation">Confirmer le mot de passe</label>
        <input type="password" name="customer[password_confirmation]" id="PasswordConfirmation" autocomplete="new-password" required>
      </div>
      
      <button type="submit" class="np-reset__button">Réinitialiser</button>
    {% endform %}
  </div>
</div>

<style>
  .np-reset {
    padding: 80px 20px;
    background: #0f172a;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .np-reset__container {
    max-width: 400px;
    width: 100%;
  }
  .np-reset__title {
    font-size: 2rem;
    color: #ffffff;
    text-align: center;
    margin: 0 0 32px 0;
  }
  .np-reset__field {
    margin-bottom: 20px;
  }
  .np-reset__field label {
    display: block;
    color: #94a3b8;
    margin-bottom: 8px;
    font-size: 0.875rem;
  }
  .np-reset__field input {
    width: 100%;
    padding: 12px 16px;
    background: #1e293b;
    border: 1px solid #334155;
    border-radius: 8px;
    color: #ffffff;
    font-size: 1rem;
  }
  .np-reset__button {
    width: 100%;
    padding: 14px;
    background: #6366f1;
    color: #ffffff;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
  }
</style>
