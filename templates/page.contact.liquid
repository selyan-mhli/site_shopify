<section class="contact-section py-16 bg-dark-950 min-h-[70vh]">
  <div class="container mx-auto px-6">
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-dark-100 mb-4">{{ page.title }}</h1>
        {% if page.content != blank %}
          <div class="text-dark-400 text-lg">{{ page.content }}</div>
        {% else %}
          <p class="text-dark-400 text-lg">Have a question? We'd love to hear from you.</p>
        {% endif %}
      </div>
      
      {% form 'contact', class: 'contact-form space-y-6' %}
        {% if form.posted_successfully? %}
          <div class="p-4 bg-green-500/10 border border-green-500/50 rounded-lg text-center">
            <p class="text-green-400">Thank you for your message. We'll get back to you soon!</p>
          </div>
        {% endif %}
        
        {% if form.errors %}
          <div class="p-4 bg-red-500/10 border border-red-500/50 rounded-lg">
            <p class="text-red-400">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}
        
        <div class="space-y-2">
          <label for="contact-reason" class="block text-sm font-medium text-dark-300">
            Reason for contact <span class="text-primary-500">*</span>
          </label>
          <select 
            id="contact-reason" 
            name="contact[reason]"
            class="w-full px-4 py-3 bg-dark-800 border border-dark-700 rounded-lg text-dark-100 text-sm focus:outline-none focus:border-primary-500 transition-colors"
            required
          >
            <option value="" disabled selected>Select a reason</option>
            <option value="general">General Inquiry</option>
            <option value="sales">Sales & Pricing</option>
            <option value="support">Technical Support</option>
            <option value="partnership">Partnership</option>
            <option value="other">Other</option>
          </select>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-2">
            <label for="contact-firstname" class="block text-sm font-medium text-dark-300">
              First Name <span class="text-primary-500">*</span>
            </label>
            <input 
              type="text" 
              id="contact-firstname"
              name="contact[first_name]"
              placeholder="John"
              class="w-full px-4 py-3 bg-dark-800 border border-dark-700 rounded-lg text-dark-100 text-sm placeholder-dark-500 focus:outline-none focus:border-primary-500 transition-colors"
              required
            >
          </div>
          
          <div class="space-y-2">
            <label for="contact-lastname" class="block text-sm font-medium text-dark-300">
              Last Name <span class="text-primary-500">*</span>
            </label>
            <input 
              type="text" 
              id="contact-lastname"
              name="contact[last_name]"
              placeholder="Doe"
              class="w-full px-4 py-3 bg-dark-800 border border-dark-700 rounded-lg text-dark-100 text-sm placeholder-dark-500 focus:outline-none focus:border-primary-500 transition-colors"
              required
            >
          </div>
        </div>
        
        <div class="space-y-2">
          <label for="contact-email" class="block text-sm font-medium text-dark-300">
            Email <span class="text-primary-500">*</span>
          </label>
          <input 
            type="email" 
            id="contact-email"
            name="contact[email]"
            placeholder="john@example.com"
            class="w-full px-4 py-3 bg-dark-800 border border-dark-700 rounded-lg text-dark-100 text-sm placeholder-dark-500 focus:outline-none focus:border-primary-500 transition-colors"
            required
          >
        </div>
        
        <div class="space-y-2">
          <label for="contact-phone" class="block text-sm font-medium text-dark-300">
            Phone <span class="text-dark-500">(optional)</span>
          </label>
          <input 
            type="tel" 
            id="contact-phone"
            name="contact[phone]"
            placeholder="+33 6 12 34 56 78"
            class="w-full px-4 py-3 bg-dark-800 border border-dark-700 rounded-lg text-dark-100 text-sm placeholder-dark-500 focus:outline-none focus:border-primary-500 transition-colors"
          >
        </div>
        
        <div class="space-y-2">
          <label for="contact-message" class="block text-sm font-medium text-dark-300">
            Message <span class="text-primary-500">*</span>
          </label>
          <textarea 
            id="contact-message"
            name="contact[body]"
            rows="6"
            placeholder="Tell us how we can help you..."
            class="w-full px-4 py-3 bg-dark-800 border border-dark-700 rounded-lg text-dark-100 text-sm placeholder-dark-500 focus:outline-none focus:border-primary-500 transition-colors resize-none"
            required
          ></textarea>
        </div>
        
        <div class="pt-4">
          <button 
            type="submit" 
            class="w-full px-6 py-4 bg-primary-600 hover:bg-primary-500 text-white font-medium rounded-lg transition-all duration-300 hover:shadow-lg hover:shadow-primary-500/25 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-dark-950"
          >
            Send Message
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</section>
