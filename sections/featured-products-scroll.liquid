{%- liquid
  assign section_id = 'featured-scroll-' | append: section.id
-%}

<section 
  id="{{ section_id }}"
  class="np-featured-scroll"
  style="
    --np-bg-color: {{ section.settings.bg_color }};
    --np-text-color: {{ section.settings.text_color }};
    --np-accent-color: {{ section.settings.accent_color }};
    --np-padding-top: {{ section.settings.padding_top }}px;
    --np-padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="np-featured-scroll__container">
    <div class="np-featured-scroll__content">
      {%- if section.settings.subtitle != blank -%}
        <p class="np-featured-scroll__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
      {%- if section.settings.title != blank -%}
        <h2 class="np-featured-scroll__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <p class="np-featured-scroll__description">{{ section.settings.description }}</p>
      {%- endif -%}
      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="np-featured-scroll__button">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>

    <div class="np-featured-scroll__products">
      <div class="np-featured-scroll__track">
        {%- if section.settings.collection != blank -%}
          {%- for product in section.settings.collection.products limit: section.settings.products_limit -%}
            <div class="np-featured-scroll__product">
              <a href="{{ product.url }}" class="np-featured-scroll__product-link">
                {%- if product.featured_image != blank -%}
                  <img 
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    srcset="
                      {{ product.featured_image | image_url: width: 400 }} 400w,
                      {{ product.featured_image | image_url: width: 600 }} 600w,
                      {{ product.featured_image | image_url: width: 800 }} 800w
                    "
                    sizes="(max-width: 768px) 280px, 400px"
                    alt="{{ product.title | escape }}"
                    loading="lazy"
                    class="np-featured-scroll__product-image"
                  >
                {%- else -%}
                  <div class="np-featured-scroll__product-placeholder">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                      <circle cx="8.5" cy="8.5" r="1.5"/>
                      <polyline points="21,15 16,10 5,21"/>
                    </svg>
                  </div>
                {%- endif -%}
              </a>
            </div>
          {%- endfor -%}
        {%- else -%}
          {%- for i in (1..4) -%}
            <div class="np-featured-scroll__product">
              <div class="np-featured-scroll__product-placeholder">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <circle cx="8.5" cy="8.5" r="1.5"/>
                  <polyline points="21,15 16,10 5,21"/>
                </svg>
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  #{{ section_id }} {
    background-color: var(--np-bg-color);
    color: var(--np-text-color);
    padding-top: var(--np-padding-top);
    padding-bottom: var(--np-padding-bottom);
    overflow: hidden;
  }

  #{{ section_id }} .np-featured-scroll__container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    #{{ section_id }} .np-featured-scroll__container {
      grid-template-columns: 1fr 2fr;
      gap: 0;
    }
  }

  #{{ section_id }} .np-featured-scroll__content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  @media (min-width: 1024px) {
    #{{ section_id }} .np-featured-scroll__content {
      padding: 4rem;
      max-width: 400px;
    }
  }

  #{{ section_id }} .np-featured-scroll__subtitle {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--np-accent-color);
    margin-bottom: 0.5rem;
  }

  #{{ section_id }} .np-featured-scroll__title {
    font-size: 1.5rem;
    font-weight: 400;
    line-height: 1.3;
    margin: 0 0 1rem 0;
  }

  @media (min-width: 768px) {
    #{{ section_id }} .np-featured-scroll__title {
      font-size: 1.75rem;
    }
  }

  #{{ section_id }} .np-featured-scroll__description {
    font-size: 0.9375rem;
    line-height: 1.6;
    opacity: 0.8;
    margin-bottom: 1.5rem;
  }

  #{{ section_id }} .np-featured-scroll__button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--np-text-color);
    border-radius: 9999px;
    font-size: 0.8125rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    width: fit-content;
  }

  #{{ section_id }} .np-featured-scroll__button:hover {
    background-color: var(--np-text-color);
    color: var(--np-bg-color);
  }

  #{{ section_id }} .np-featured-scroll__products {
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  #{{ section_id }} .np-featured-scroll__products::-webkit-scrollbar {
    display: none;
  }

  #{{ section_id }} .np-featured-scroll__track {
    display: flex;
    gap: 1rem;
    padding: 1rem 2rem;
  }

  @media (min-width: 1024px) {
    #{{ section_id }} .np-featured-scroll__track {
      padding: 2rem;
    }
  }

  #{{ section_id }} .np-featured-scroll__product {
    flex: 0 0 280px;
  }

  @media (min-width: 768px) {
    #{{ section_id }} .np-featured-scroll__product {
      flex: 0 0 350px;
    }
  }

  #{{ section_id }} .np-featured-scroll__product-link {
    display: block;
    text-decoration: none;
  }

  #{{ section_id }} .np-featured-scroll__product-image {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 4px;
    transition: transform 0.3s ease;
  }

  #{{ section_id }} .np-featured-scroll__product-link:hover .np-featured-scroll__product-image {
    transform: scale(1.02);
  }

  #{{ section_id }} .np-featured-scroll__product-placeholder {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #e5e7eb;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #9ca3af;
  }
</style>

{% schema %}
{
  "name": "Featured Products Scroll",
  "tag": "section",
  "class": "np-featured-scroll-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "New this season"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "A collection of inspired silhouettes crafted from the finest fibers."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6,
      "label": "Products to show"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#0f172a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color",
      "default": "#0ea5e9"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 60,
      "unit": "px",
      "label": "Padding top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 60,
      "unit": "px",
      "label": "Padding bottom"
    }
  ],
  "presets": [
    {
      "name": "Featured Products Scroll",
      "settings": {
        "subtitle": "New this season",
        "title": "A collection of inspired silhouettes crafted from the finest fibers.",
        "button_text": "Shop now"
      }
    }
  ]
}
{% endschema %}
