<footer class="footer bg-dark-950 border-t border-dark-800/50 pt-16 pb-8">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      <div>
        <h4 class="text-sm font-medium text-white mb-4">Service client</h4>
        <ul class="space-y-2">
          <li><a href="/pages/contact" class="text-sm text-dark-400 hover:text-white transition-colors">Contact</a></li>
          <li><a href="/pages/faq" class="text-sm text-dark-400 hover:text-white transition-colors">FAQ</a></li>
          <li><a href="/pages/livraison" class="text-sm text-dark-400 hover:text-white transition-colors">Livraison</a></li>
          <li><a href="/pages/retours" class="text-sm text-dark-400 hover:text-white transition-colors">Retours</a></li>
        </ul>
      </div>

      <div>
        <h4 class="text-sm font-medium text-white mb-4">À propos de nous</h4>
        <ul class="space-y-2">
          <li><a href="/pages/about" class="text-sm text-dark-400 hover:text-white transition-colors">Qui sommes-nous ?</a></li>
          <li><a href="/pages/expertise" class="text-sm text-dark-400 hover:text-white transition-colors">Notre expertise</a></li>
          <li><a href="/pages/avis-clients" class="text-sm text-dark-400 hover:text-white transition-colors">Avis clients</a></li>
        </ul>
      </div>

      <div>
        <h4 class="text-sm font-medium text-white mb-4">Informations</h4>
        <ul class="space-y-2">
          <li><a href="/policies/privacy-policy" class="text-sm text-dark-400 hover:text-white transition-colors">Confidentialité</a></li>
        </ul>
      </div>

      <div>
        <h4 class="text-sm font-medium text-white mb-4">Mon compte</h4>
        <ul class="space-y-2">
          <li><a href="{{ routes.account_login_url }}" class="text-sm text-dark-400 hover:text-white transition-colors">Connexion</a></li>
          <li><a href="{{ routes.account_url }}" class="text-sm text-dark-400 hover:text-white transition-colors">Mes commandes</a></li>
          <li><a href="/pages/retours" class="text-sm text-dark-400 hover:text-white transition-colors">Retours</a></li>
        </ul>
      </div>
    </div>

    <div class="border-t border-dark-800/50 pt-8 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-dark-500 text-xs">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Commerce électronique propulsé par Shopify
      </p>
      <a href="/policies/terms-of-service" class="text-dark-500 text-xs hover:text-white transition-colors">
        Conditions générales et politiques
      </a>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer Description",
      "default": "Professional camera equipment for demanding applications."
    }
  ],
  "presets": []
}
{% endschema %}
