<footer class="footer bg-dark-950 border-t border-dark-800/50 pt-16 pb-8">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <div class="footer-brand">
        <a href="/" class="inline-block mb-4">
          {%- if settings.logo != blank -%}
            <img 
              src="{{ settings.logo | image_url: width: 200 }}" 
              alt="{{ shop.name }}"
              class="h-10 w-auto"
            >
          {%- else -%}
            <img src="{{ 'logo.svg' | asset_url }}" alt="{{ shop.name }}" class="h-8 w-auto">
          {%- endif -%}
        </a>
        <p class="text-dark-400 text-sm leading-relaxed mb-4">
          {{ section.settings.footer_description | default: 'Professional security solutions for demanding applications.' }}
        </p>
        <div class="flex items-center gap-4">
          {%- if settings.social_twitter_link != blank -%}
            <a href="{{ settings.social_twitter_link }}" class="text-dark-500 hover:text-primary-400 transition-colors" aria-label="Twitter">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            </a>
          {%- endif -%}
          {%- if settings.social_instagram_link != blank -%}
            <a href="{{ settings.social_instagram_link }}" class="text-dark-500 hover:text-primary-400 transition-colors" aria-label="Instagram">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            </a>
          {%- endif -%}
          {%- if settings.social_youtube_link != blank -%}
            <a href="{{ settings.social_youtube_link }}" class="text-dark-500 hover:text-primary-400 transition-colors" aria-label="YouTube">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
            </a>
          {%- endif -%}
          {%- if settings.social_linkedin_link != blank -%}
            <a href="{{ settings.social_linkedin_link }}" class="text-dark-500 hover:text-primary-400 transition-colors" aria-label="LinkedIn">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            </a>
          {%- endif -%}
        </div>
      </div>

      <div class="footer-links">
        <h4 class="text-sm font-semibold text-dark-100 uppercase tracking-wider mb-4">Products</h4>
        <ul class="space-y-3">
          {%- for link in linklists.footer-products.links -%}
            <li>
              <a href="{{ link.url }}" class="text-sm text-dark-400 hover:text-primary-400 transition-colors">
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>

      <div class="footer-links">
        <h4 class="text-sm font-semibold text-dark-100 uppercase tracking-wider mb-4">Support</h4>
        <ul class="space-y-3">
          {%- for link in linklists.footer-support.links -%}
            <li>
              <a href="{{ link.url }}" class="text-sm text-dark-400 hover:text-primary-400 transition-colors">
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>

      <div class="footer-newsletter">
        <h4 class="text-sm font-semibold text-dark-100 uppercase tracking-wider mb-4">Newsletter</h4>
        <p class="text-sm text-dark-400 mb-4">Stay updated with the latest products and tech insights.</p>
        {% form 'customer', class: 'newsletter-form' %}
          <div class="flex gap-2">
            <input 
              type="email" 
              name="contact[email]" 
              placeholder="Enter your email"
              class="flex-1 px-4 py-2 bg-dark-800 border border-dark-700 rounded-lg text-dark-100 text-sm placeholder-dark-500 focus:outline-none focus:border-primary-500 transition-colors"
              required
            >
            <button type="submit" class="px-4 py-2 bg-primary-600 hover:bg-primary-500 text-white text-sm font-medium rounded-lg transition-colors">
              Subscribe
            </button>
          </div>
          <input type="hidden" name="contact[tags]" value="newsletter">
        {% endform %}
      </div>
    </div>

    <div class="border-t border-dark-800/50 pt-8 flex flex-col items-center text-center gap-4">
      <div class="flex items-center gap-6">
        {%- for link in linklists.footer-legal.links -%}
          <a href="{{ link.url }}" class="text-xs text-dark-500 hover:text-dark-300 transition-colors">
            {{ link.title }}
          </a>
        {%- endfor -%}
      </div>
      <p class="text-sm text-dark-500">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer Description",
      "default": "Professional camera equipment for demanding applications."
    }
  ],
  "presets": []
}
{% endschema %}
