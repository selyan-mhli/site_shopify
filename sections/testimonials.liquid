{%- liquid
  assign section_id = 'testimonials-' | append: section.id
  assign columns_mobile = section.settings.columns_mobile
  assign columns_tablet = section.settings.columns_tablet
  assign columns_desktop = section.settings.columns_desktop
-%}

<section 
  id="{{ section_id }}"
  class="np-testimonials np-testimonials--{{ section.settings.layout }}"
  style="
    --np-bg-color: {{ section.settings.bg_color }};
    --np-text-color: {{ section.settings.text_color }};
    --np-card-bg: {{ section.settings.card_bg_color }};
    --np-card-border: {{ section.settings.card_border_color }};
    --np-accent-color: {{ section.settings.accent_color }};
    --np-star-color: {{ section.settings.star_color }};
    --np-padding-top: {{ section.settings.padding_top }}px;
    --np-padding-bottom: {{ section.settings.padding_bottom }}px;
    --np-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --np-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --np-title-size: {{ section.settings.title_size }}px;
    --np-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --np-text-size: {{ section.settings.text_size }}px;
    --np-text-size-mobile: {{ section.settings.text_size_mobile }}px;
    --np-columns-mobile: {{ columns_mobile }};
    --np-columns-tablet: {{ columns_tablet }};
    --np-columns-desktop: {{ columns_desktop }};
    --np-gap: {{ section.settings.grid_gap }}px;
  "
>
  <div class="np-testimonials__container">
    {%- if section.settings.title != blank or section.settings.subtitle != blank -%}
      <div class="np-testimonials__header np-testimonials__header--{{ section.settings.text_alignment }}">
        {%- if section.settings.subtitle != blank -%}
          <p class="np-testimonials__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h2 class="np-testimonials__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="np-testimonials__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="np-testimonials__grid">
        {%- for block in section.blocks -%}
          <article 
            class="np-testimonial-card" 
            {{ block.shopify_attributes }}
            style="
              --np-card-bg-override: {{ block.settings.card_bg_color_override | default: 'transparent' }};
            "
          >
            {%- if section.settings.show_rating -%}
              <div class="np-testimonial-card__rating" aria-label="Rating: {{ block.settings.rating }} out of 5 stars">
                {%- for i in (1..5) -%}
                  {%- if i <= block.settings.rating -%}
                    <svg class="np-testimonial-card__star np-testimonial-card__star--filled" width="20" height="20" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  {%- else -%}
                    <svg class="np-testimonial-card__star np-testimonial-card__star--empty" width="20" height="20" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            {%- endif -%}

            {%- if block.settings.content != blank -%}
              <blockquote class="np-testimonial-card__content">
                <p>{{ block.settings.content }}</p>
              </blockquote>
            {%- endif -%}

            <footer class="np-testimonial-card__footer">
              <div class="np-testimonial-card__author">
                {%- if block.settings.avatar != blank -%}
                  <picture class="np-testimonial-card__avatar">
                    <source 
                      media="(min-width: 768px)" 
                      srcset="{{ block.settings.avatar | image_url: width: 120 }} 1x, {{ block.settings.avatar | image_url: width: 240 }} 2x"
                    >
                    <img 
                      src="{{ block.settings.avatar | image_url: width: 96 }}"
                      srcset="{{ block.settings.avatar | image_url: width: 96 }} 1x, {{ block.settings.avatar | image_url: width: 192 }} 2x"
                      alt="{{ block.settings.author | escape }}"
                      width="48"
                      height="48"
                      loading="lazy"
                      decoding="async"
                    >
                  </picture>
                {%- else -%}
                  <div class="np-testimonial-card__avatar np-testimonial-card__avatar--placeholder">
                    <span>{{ block.settings.author | slice: 0 | upcase }}</span>
                  </div>
                {%- endif -%}

                <div class="np-testimonial-card__author-info">
                  <cite class="np-testimonial-card__name">{{ block.settings.author }}</cite>
                  {%- if block.settings.role != blank -%}
                    <span class="np-testimonial-card__role">{{ block.settings.role }}</span>
                  {%- endif -%}
                </div>
              </div>

              {%- if block.settings.verified and section.settings.show_verified_badge -%}
                <div class="np-testimonial-card__verified">
                  <svg class="np-testimonial-card__verified-icon" width="12" height="12" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span>{{ section.settings.verified_text }}</span>
                </div>
              {%- endif -%}
            </footer>

            {%- if block.settings.product != blank -%}
              <a href="{{ block.settings.product.url }}" class="np-testimonial-card__product">
                {%- if block.settings.product.featured_image != blank -%}
                  <img 
                    src="{{ block.settings.product.featured_image | image_url: width: 80 }}"
                    srcset="{{ block.settings.product.featured_image | image_url: width: 80 }} 1x, {{ block.settings.product.featured_image | image_url: width: 160 }} 2x"
                    alt="{{ block.settings.product.title | escape }}"
                    width="40"
                    height="40"
                    loading="lazy"
                    decoding="async"
                    class="np-testimonial-card__product-image"
                  >
                {%- endif -%}
                <span class="np-testimonial-card__product-title">{{ block.settings.product.title }}</span>
              </a>
            {%- endif -%}
          </article>
        {%- endfor -%}
      </div>

      {%- if section.settings.show_cta and section.settings.cta_text != blank -%}
        <div class="np-testimonials__cta np-testimonials__cta--{{ section.settings.text_alignment }}">
          <a 
            href="{{ section.settings.cta_link }}" 
            class="np-testimonials__button"
            style="
              --np-btn-bg: {{ section.settings.button_bg_color }};
              --np-btn-text: {{ section.settings.button_text_color }};
              --np-btn-hover-bg: {{ section.settings.button_hover_bg_color }};
            "
          >
            {{ section.settings.cta_text }}
            {%- if section.settings.show_cta_arrow -%}
              <svg class="np-testimonials__button-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            {%- endif -%}
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="np-testimonials__empty">
        <p>{{ 'sections.testimonials.empty' | t | default: 'Add testimonials using the section blocks.' }}</p>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  #{{ section_id }} {
    background-color: var(--np-bg-color);
    color: var(--np-text-color);
    padding-top: var(--np-padding-top-mobile);
    padding-bottom: var(--np-padding-bottom-mobile);
  }

  @media (min-width: 768px) {
    #{{ section_id }} {
      padding-top: var(--np-padding-top);
      padding-bottom: var(--np-padding-bottom);
    }
  }

  #{{ section_id }} .np-testimonials__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.horizontal_padding }}px;
  }

  #{{ section_id }} .np-testimonials__header {
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
  }

  #{{ section_id }} .np-testimonials__header--left { text-align: left; }
  #{{ section_id }} .np-testimonials__header--center { text-align: center; }
  #{{ section_id }} .np-testimonials__header--right { text-align: right; }

  #{{ section_id }} .np-testimonials__subtitle {
    font-size: 0.875rem;
    font-family: monospace;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--np-accent-color);
    margin-bottom: 1rem;
  }

  #{{ section_id }} .np-testimonials__title {
    font-size: var(--np-title-size-mobile);
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1rem 0;
  }

  @media (min-width: 768px) {
    #{{ section_id }} .np-testimonials__title {
      font-size: var(--np-title-size);
    }
  }

  #{{ section_id }} .np-testimonials__description {
    font-size: var(--np-text-size);
    opacity: 0.7;
    max-width: 600px;
    margin: 0 auto;
  }

  #{{ section_id }} .np-testimonials__header--left .np-testimonials__description { margin-left: 0; }
  #{{ section_id }} .np-testimonials__header--right .np-testimonials__description { margin-right: 0; }

  #{{ section_id }} .np-testimonials__grid {
    display: grid;
    grid-template-columns: repeat(var(--np-columns-mobile), 1fr);
    gap: var(--np-gap);
  }

  @media (min-width: 768px) {
    #{{ section_id }} .np-testimonials__grid {
      grid-template-columns: repeat(var(--np-columns-tablet), 1fr);
    }
  }

  @media (min-width: 1024px) {
    #{{ section_id }} .np-testimonials__grid {
      grid-template-columns: repeat(var(--np-columns-desktop), 1fr);
    }
  }

  #{{ section_id }} .np-testimonial-card {
    background-color: var(--np-card-bg);
    border: 1px solid var(--np-card-border);
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  {%- if section.settings.card_hover_effect -%}
    #{{ section_id }} .np-testimonial-card:hover {
      border-color: var(--np-accent-color);
      transform: translateY(-4px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }
  {%- endif -%}

  #{{ section_id }} .np-testimonial-card__rating {
    display: flex;
    gap: 2px;
    margin-bottom: 1rem;
  }

  #{{ section_id }} .np-testimonial-card__star--filled {
    color: var(--np-star-color);
  }

  #{{ section_id }} .np-testimonial-card__star--empty {
    color: var(--np-card-border);
  }

  #{{ section_id }} .np-testimonial-card__content {
    font-size: var(--np-text-size-mobile);
    line-height: 1.6;
    margin: 0 0 1.5rem 0;
    flex-grow: 1;
  }

  @media (min-width: 768px) {
    #{{ section_id }} .np-testimonial-card__content {
      font-size: var(--np-text-size);
    }
  }

  #{{ section_id }} .np-testimonial-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  #{{ section_id }} .np-testimonial-card__author {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  #{{ section_id }} .np-testimonial-card__avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  #{{ section_id }} .np-testimonial-card__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #{{ section_id }} .np-testimonial-card__avatar--placeholder {
    background-color: var(--np-accent-color);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-weight: 600;
    font-size: 1.125rem;
  }

  #{{ section_id }} .np-testimonial-card__author-info {
    display: flex;
    flex-direction: column;
  }

  #{{ section_id }} .np-testimonial-card__name {
    font-weight: 600;
    font-style: normal;
    font-size: 0.9375rem;
  }

  #{{ section_id }} .np-testimonial-card__role {
    font-size: 0.8125rem;
    opacity: 0.6;
  }

  #{{ section_id }} .np-testimonial-card__verified {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    background-color: rgba(34, 197, 94, 0.1);
    color: #22c55e;
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 9999px;
  }

  #{{ section_id }} .np-testimonial-card__product {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--np-card-border);
    text-decoration: none;
    color: inherit;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  #{{ section_id }} .np-testimonial-card__product:hover {
    color: var(--np-accent-color);
  }

  #{{ section_id }} .np-testimonial-card__product-image {
    width: 40px;
    height: 40px;
    object-fit: cover;
    border-radius: 6px;
  }

  #{{ section_id }} .np-testimonials__cta {
    margin-top: {{ section.settings.cta_margin_top }}px;
  }

  #{{ section_id }} .np-testimonials__cta--left { text-align: left; }
  #{{ section_id }} .np-testimonials__cta--center { text-align: center; }
  #{{ section_id }} .np-testimonials__cta--right { text-align: right; }

  #{{ section_id }} .np-testimonials__button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    background-color: var(--np-btn-bg);
    color: var(--np-btn-text);
    font-weight: 500;
    font-size: 0.9375rem;
    border-radius: {{ section.settings.button_border_radius }}px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  #{{ section_id }} .np-testimonials__button:hover {
    background-color: var(--np-btn-hover-bg);
    transform: translateY(-2px);
  }

  #{{ section_id }} .np-testimonials__empty {
    text-align: center;
    padding: 3rem;
    opacity: 0.5;
  }
</style>

{% schema %}
{
  "name": "Testimonials Pro",
  "tag": "section",
  "class": "np-testimonials-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Customer Reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "What Our Customers Say"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout style",
      "default": "grid",
      "options": [
        { "value": "grid", "label": "Grid" },
        { "value": "masonry", "label": "Masonry" }
      ]
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "min": 1,
      "max": 2,
      "step": 1,
      "default": 1,
      "label": "Columns (Mobile)"
    },
    {
      "type": "range",
      "id": "columns_tablet",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2,
      "label": "Columns (Tablet)"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Columns (Desktop)"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 8,
      "max": 48,
      "step": 4,
      "default": 24,
      "unit": "px",
      "label": "Grid gap"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 800,
      "max": 1600,
      "step": 50,
      "default": 1200,
      "unit": "px",
      "label": "Max width"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 24,
      "max": 72,
      "step": 2,
      "default": 36,
      "unit": "px",
      "label": "Title size (Desktop)"
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "min": 20,
      "max": 48,
      "step": 2,
      "default": 28,
      "unit": "px",
      "label": "Title size (Mobile)"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 14,
      "max": 24,
      "step": 1,
      "default": 16,
      "unit": "px",
      "label": "Text size (Desktop)"
    },
    {
      "type": "range",
      "id": "text_size_mobile",
      "min": 13,
      "max": 20,
      "step": 1,
      "default": 15,
      "unit": "px",
      "label": "Text size (Mobile)"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#0f172a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#f8fafc"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color",
      "default": "#0ea5e9"
    },
    {
      "type": "color",
      "id": "star_color",
      "label": "Star color",
      "default": "#eab308"
    },
    {
      "type": "header",
      "content": "Card styling"
    },
    {
      "type": "color",
      "id": "card_bg_color",
      "label": "Card background",
      "default": "#1e293b"
    },
    {
      "type": "color",
      "id": "card_border_color",
      "label": "Card border color",
      "default": "#334155"
    },
    {
      "type": "range",
      "id": "card_border_radius",
