      "max": 80,
      "step": 4,
      "default": 40,
      "unit": "px",
      "label": "Padding top (Mobile)"
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 80,
      "step": 4,
      "default": 40,
      "unit": "px",
      "label": "Padding bottom (Mobile)"
    },
    {
      "type": "range",
      "id": "horizontal_padding",
      "min": 16,
      "max": 48,
      "step": 4,
      "default": 24,
      "unit": "px",
      "label": "Horizontal padding"
    },
    {
      "type": "range",
      "id": "header_margin_bottom",
      "min": 24,
      "max": 80,
      "step": 4,
      "default": 48,
      "unit": "px",
      "label": "Header margin bottom"
    },
    {
      "type": "header",
      "content": "Features"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show star rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_verified_badge",
      "label": "Show verified badge",
      "default": true
    },
    {
      "type": "text",
      "id": "verified_text",
      "label": "Verified badge text",
      "default": "Verified"
    },
    {
      "type": "header",
      "content": "Call to action"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show CTA button",
      "default": false
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Read All Reviews"
    },
