<section class="collection-header py-16 bg-dark-950 border-b border-dark-800/50">
  <div class="container mx-auto px-6">
    <div class="max-w-3xl">
      <nav class="flex items-center gap-2 text-sm text-dark-500 mb-6">
        <a href="/" class="hover:text-primary-400 transition-colors">Home</a>
        <span>/</span>
        <span class="text-dark-300">{{ collection.title }}</span>
      </nav>
      
      <h1 class="text-4xl md:text-5xl font-bold text-dark-100 mb-4">{{ collection.title }}</h1>
      
      {% if collection.description != blank %}
        <p class="text-dark-400 text-lg leading-relaxed">{{ collection.description }}</p>
      {% endif %}
      
      <div class="flex items-center gap-4 mt-6 text-sm text-dark-500">
        <span class="font-mono">{{ collection.products_count }} products</span>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection Header",
  "settings": [],
  "presets": []
}
{% endschema %}
