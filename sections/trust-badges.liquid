<section class="trust-badges py-12 bg-dark-950 border-y border-dark-800/50">
  <div class="container mx-auto px-6">
    {% if section.settings.title != blank %}
      <p class="text-center text-sm text-dark-500 uppercase tracking-wider mb-8">{{ section.settings.title }}</p>
    {% endif %}
    
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-12">
      {% for block in section.blocks %}
        {% if block.type == 'badge' %}
          <div class="flex items-center gap-3 text-dark-400" {{ block.shopify_attributes }}>
            {% if block.settings.icon == 'shield' %}
              <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            {% elsif block.settings.icon == 'truck' %}
              <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"/>
              </svg>
            {% elsif block.settings.icon == 'refresh' %}
              <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
            {% elsif block.settings.icon == 'credit-card' %}
              <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
              </svg>
            {% elsif block.settings.icon == 'phone' %}
              <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            {% elsif block.settings.icon == 'award' %}
              <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
              </svg>
            {% endif %}
            <span class="text-sm font-medium">{{ block.settings.text }}</span>
          </div>
        {% elsif block.type == 'logo' %}
          {% if block.settings.logo != blank %}
            <div class="opacity-50 hover:opacity-100 transition-opacity" {{ block.shopify_attributes }}>
              <img 
                src="{{ block.settings.logo | image_url: width: 150 }}"
                alt="{{ block.settings.alt }}"
                class="h-8 w-auto grayscale hover:grayscale-0 transition-all"
                loading="lazy"
              >
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Trust Badges",
  "tag": "section",
  "class": "trust-badges-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Trusted by professionals worldwide"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Trust Badge",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "default": "shield",
          "options": [
            { "value": "shield", "label": "Shield (Security)" },
            { "value": "truck", "label": "Truck (Shipping)" },
            { "value": "refresh", "label": "Refresh (Returns)" },
            { "value": "credit-card", "label": "Credit Card (Payment)" },
            { "value": "phone", "label": "Phone (Support)" },
            { "value": "award", "label": "Award (Quality)" }
          ]
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Secure Payment"
        }
      ]
    },
    {
      "type": "logo",
      "name": "Partner Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges",
      "blocks": [
        { "type": "badge", "settings": { "icon": "shield", "text": "Secure Payment" } },
        { "type": "badge", "settings": { "icon": "truck", "text": "Free Shipping" } },
        { "type": "badge", "settings": { "icon": "refresh", "text": "30-Day Returns" } },
        { "type": "badge", "settings": { "icon": "phone", "text": "24/7 Support" } }
      ]
    }
  ]
}
{% endschema %}
