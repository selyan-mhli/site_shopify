{%- if section.settings.show_announcement -%}
  <div class="announcement-bar bg-primary-600 text-white px-4 py-2 relative z-50">
    <div class="container mx-auto flex items-center justify-between">
      <div class="flex-1 text-center text-sm font-medium">
        {%- if section.settings.link != blank -%}
          <a href="{{ section.settings.link }}" class="hover:underline">
            {{ section.settings.text | escape }}
          </a>
        {%- else -%}
          {{ section.settings.text | escape }}
        {%- endif -%}
      </div>
      
      {%- if section.settings.show_close -%}
        <button 
          type="button" 
          class="text-white/80 hover:text-white transition-colors"
          onclick="this.closest('.announcement-bar').remove()"
          aria-label="Close announcement"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      {%- endif -%}
    </div>
  </div>

  <style>
    .announcement-bar {
      background-color: {{ section.settings.bg_color }};
      color: {{ section.settings.text_color }};
    }
  </style>
{%- endif -%}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Welcome to our store"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#0ea5e9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_close",
      "label": "Show close button",
      "default": false
    }
  ]
}
{% endschema %}
