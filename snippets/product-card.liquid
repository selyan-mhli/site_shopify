{%- liquid
  assign is_new = false
  assign is_bestseller = false
  assign is_low_stock = false
  assign stock_count = 0
  
  assign product_published_at = product.published_at | date: '%s' | plus: 0
  assign thirty_days_ago = 'now' | date: '%s' | minus: 2592000
  if product_published_at > thirty_days_ago
    assign is_new = true
  endif
  
  if product.tags contains 'bestseller' or product.tags contains 'best-seller'
    assign is_bestseller = true
  endif
  
  if product.tags contains 'low-stock'
    assign is_low_stock = true
  endif
  
  for variant in product.variants
    assign stock_count = stock_count | plus: variant.inventory_quantity
  endfor
-%}

<article class="product-card card-tech group cursor-pointer" data-product-id="{{ product.id }}">
  <a href="{{ product.url }}" class="block">
    <div class="relative aspect-square overflow-hidden rounded-lg mb-4 bg-dark-800">
      {% if product.featured_image %}
        <img 
          src="{{ product.featured_image | image_url: width: 600 }}"
          alt="{{ product.featured_image.alt | escape }}"
          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          loading="lazy"
          width="600"
          height="600"
        >
      {% else %}
        <div class="w-full h-full flex items-center justify-center">
          <svg class="w-16 h-16 text-dark-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
      {% endif %}
      
      <div class="absolute top-3 left-3 flex flex-col gap-2">
        {% if product.available == false %}
          <span class="px-2 py-1 bg-dark-900/90 text-dark-400 text-xs font-medium rounded">
            Sold Out
          </span>
        {% else %}
          {% if is_bestseller %}
            <span class="px-2 py-1 bg-yellow-500 text-dark-900 text-xs font-medium rounded flex items-center gap-1">
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              Bestseller
            </span>
          {% endif %}
          {% if is_new %}
            <span class="px-2 py-1 bg-green-500 text-white text-xs font-medium rounded">
              New
            </span>
          {% endif %}
          {% if product.compare_at_price > product.price %}
            {%- assign discount = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price -%}
            <span class="px-2 py-1 bg-red-500 text-white text-xs font-medium rounded">
              -{{ discount }}%
            </span>
          {% endif %}
        {% endif %}
      </div>
      
      {% if is_low_stock and product.available and stock_count > 0 and stock_count <= 10 %}
        <div class="absolute bottom-3 left-3 right-3">
          <div class="px-2 py-1 bg-orange-500/90 text-white text-xs font-medium rounded text-center">
            Only {{ stock_count }} left in stock!
          </div>
        </div>
      {% endif %}
    </div>
    
    <div class="product-card-info">
      {% if product.vendor %}
        <p class="text-xs text-dark-500 font-mono uppercase tracking-wider mb-1">{{ product.vendor }}</p>
      {% endif %}
      
      <h3 class="text-dark-100 font-medium mb-2 group-hover:text-primary-400 transition-colors line-clamp-2">
        {{ product.title }}
      </h3>
      
      <div class="flex items-center gap-2">
        <span class="text-lg font-semibold text-dark-100">{{ product.price | money }}</span>
        {% if product.compare_at_price > product.price %}
          <span class="text-sm text-dark-500 line-through">{{ product.compare_at_price | money }}</span>
        {% endif %}
      </div>
    </div>
  </a>
</article>
